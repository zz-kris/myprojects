/* pages/NewsCenter/NewsCenter.wxss */
page{
  height: 100%;
  background: rgba(255,255,255,1);
  position: relative;
}
.new{
  
  height: 100%;
}
.content{
  padding: 0 27rpx;
}
.message{
  padding: 23rpx 0;
  display: flex;
  justify-content: space-between;
  border-bottom:1px solid rgba(240,240,240,1);
}
.message_left{
  display: flex;
}
.message_num {
  margin-top: 19rpx;
  width: 42rpx;
  height: 50rpx;
}
.message_num text{
  padding: 2rpx 12rpx;
  display: inline-block;
  background:rgba(238,238,238,1);
  border-radius:50%;
  font-size:23rpx;
  line-height:33rpx;
  color:rgba(102,102,102,1);
  text-align: center;
}
.message_right{
  width:213rpx;
  height:159rpx;
  border-radius:15rpx;
  overflow: hidden;
}
.message_detail{
  margin-left: 21rpx;
  position: relative;
}
.message_detail_title{
  width:361rpx;
  height:88rpx;
  font-size:31rpx;
  line-height:42rpx;
  color:rgba(51,51,51,1);

  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.message_detail_num{
  position: absolute;
  bottom: 0;
  font-size:23rpx;
  line-height:33rpx;
  color:rgba(126,140,166,1);
}
.message_detail_num image{
  width: 24rpx;
  height: 14rpx;
}
