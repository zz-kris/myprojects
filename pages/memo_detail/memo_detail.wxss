/* pages/memo_detail/memo_detail.wxss */
page{
  height: 100%;
  background: rgb(244,244,244);
}
.Browsinghistory{
  padding: 32rpx 32rpx 0 32rpx;
  font-family:PingFang SC;
  font-weight:500;
  position: relative;
  margin-bottom: 24rpx;
}
.collect{
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:400;
  line-height:40rpx;
  color:rgba(102,102,102,1);
}
.collect text{
  color:#edb437;
}
checkbox-group{
  display: flex;
  align-items: center;
}
checkbox .wx-checkbox-input{
  display: none;
  width: 0;
  height: 0;
} 
.select{
  margin-right: 20rpx;
  width: 40rpx;/* 选中后对勾大小，不要超过背景的尺寸 */
  height: 40rpx;
}

.operation{
  position: absolute;
  right: 32rpx;
  font-size:28rpx;
  line-height:40rpx;
  color:#edb437;
}
.operation text{
  margin-left: 20rpx;
}
.date>view{
  display: flex;
  align-items: center;
  font-size:40rpx;
  line-height:56rpx;
  color:rgba(51,51,51,1);
}
.date .commodity {
  padding: 20rpx;
  margin-top: 24rpx;
  background:rgba(255,255,255,1);
  border-radius:20rpx;
  display: flex;
  justify-content: space-between;
  width: 100%;
  height: 180rpx;
  box-sizing: content-box;
}
.img{
  width: 180rpx;
  height: 180rpx;
  border-radius:12rpx;
  background-image: url(http://test.api.meibohate.com/images/square.png);
}
.product_content{
  position: relative;
  margin-right: 20rpx;

}
.product_content_time{
  font-size: 30rpx;
  color: #edb437;
}
.product_content_content{
  width: 100%;
  height: 112rpx;
  font-size: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis; 
  white-space: pre-wrap;
  word-wrap: break-word;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.zw{
  width: 100%;
  height: 120rpx;
}
.del{
  width: 100%;
  box-sizing: border-box;
  position: fixed;
  bottom: 0;
  left: 0;
  padding: 18rpx 32rpx;
  height: 120rpx;
  background:rgba(255,255,255,1);
  display: flex;
  justify-content: space-between;
  align-items: baseline;
}
.btn{
  padding: 0rpx 0rpx 0rpx 25rpx; 
  font-size:32rpx;
  color:rgba(255,255,255,1);
  /* margin: 0; */
  /* background:#edb437; */
  /* border-radius:40px; */
}
.active{
  opacity: 1;
}
.btnactive{
  opacity:0.5;
  pointer-events:none;
}

.no{
  width: 100%;
  height: 100%;
  /* background:rgba(255,255,255,1); */
  text-align: center;
 
}
.image{
  width: 336rpx;
  height: 336rpx;
  margin: auto;
   padding-top: 56rpx;
}
.no view:nth-child(2){
  margin: 0rpx 0 36rpx 0;
}
.no view:nth-child(2) view{
  font-size:32rpx;
  font-weight:400;
  color:rgba(51,51,51,1);
}
.no view text{
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:300;
  color:rgba(130,130,130,1);
}
.no view button{
  display: inline-block;
  font-size:32rpx;
  font-family:PingFang SC;
  font-weight:400;
  line-height:44rpx;
  color:rgba(23, 142, 253, 1);
  border: 1rpx solid rgba(23, 142, 253, 1);
  background: none;
  padding: 18rpx 52rpx;
  border-radius:40px;
}
.add{
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  position: fixed;
  right: 5%;
  bottom: 10%;
  background: #edb437;
  color: #fff;
  font-size: 86rpx;
  line-height: 76rpx;
  text-align: center;

}
