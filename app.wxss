/**app.wxss**/
@import './weui.wxss';

page {
  box-sizing: border-box;
  font-size: 30rpx;
  width: 100%;
  height: 100%;
}

view,
input {
  box-sizing: border-box;
}
image{
  width: 100%;
  height: 100%;
}
/* 箭头 */
.navigator-arrow {
  padding-right: 26rpx;
  position: relative;
}

.navigator-arrow:after {
  content: " ";
  display: inline-block;
  height: 18rpx;
  width: 18rpx;
  border-width: 2rpx 2rpx 0 0;
  /* border-color: #888; */
  border-style: solid;
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  position: absolute;
  top: 50%;
  margin-top: -8rpx;
  /* right: 28rpx; */
}
/* 模态框 */
.hui{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(51, 51, 51,.7);
  z-index: 9999999;
}
.tan{
  width: 600rpx;
  height: 322rpx;
  background:rgba(255,255,255,1);
  border-radius:20rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  margin-left: -300rpx;
  margin-top: -160rpx;
}
.tan_text{
  font-size:32rpx;
  font-weight:400;
  line-height:44rpx;
  color:rgba(102,102,102,1);
  text-align: center;
  /* padding: 68rpx 0 90rpx 0; */
padding: 68rpx 28rpx 46rpx 60rpx;

}
.tan view{
  display: flex;
  justify-content: space-around;
}
.tan button{
  display: inline-block;
  font-size:32rpx;
  font-weight:400;
  line-height:44rpx;
  padding: 18rpx 60rpx;
  border-radius:40rpx;
}
.tan_no{
  border:1px solid rgba(153,153,153,1);
  color:rgba(102,102,102,1);
  background: none;
}
.tan_yes{
  background:rgba(23, 142, 253, 1);
  color:rgba(255,255,255,1);
}
/* 模态框end */